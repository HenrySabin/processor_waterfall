# Server Configuration
NODE_ENV=development
PORT=5000
LOG_LEVEL=info

# Payment Processor API Keys
STRIPE_API_KEY=sk_test_your_stripe_secret_key
PAYPAL_CLIENT_ID=your_paypal_client_id
SQUARE_APP_ID=your_square_application_id

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RESET_TIMEOUT=60000
CIRCUIT_BREAKER_MONITORING_WINDOW=300000

# Rate Limiting Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
PAYMENT_RATE_LIMIT_WINDOW_MS=60000
PAYMENT_RATE_LIMIT_MAX_REQUESTS=10

# Algorand Smart Contract Configuration
ALGORAND_SERVER=https://testnet-api.algonode.cloud
ALGORAND_TOKEN=
ALGORAND_PORT=443
ALGORAND_APP_ID=

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Database Configuration (if using external database)
DATABASE_URL=postgresql://user:password@localhost:5432/payflow
